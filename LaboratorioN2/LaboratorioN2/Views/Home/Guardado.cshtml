@model LaboratorioN2.Dominio.persona;

@*

    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <link rel="stylesheet"
          href="https://kit.fontawesome.com/ffd11ebe0f.js" crossorigin="anonymous" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.js>" />

    <script src="https://kit.fontawesome.com/ffd11ebe0f.js" crossorigin="anonymous"></script>
}

<div class="container-fluid ">
    @using (Html.BeginForm("Guardado", "Home", FormMethod.Post))
    {
        <i class="fas fa-save fa-2x"></i>
        <h1 class="animate__animated animate__backInDown">Registro</h1>
        <br />

        <div class="form-group col-md-8 ">
            <i class="fas fa-user animate__animated animate__backInDown"></i>
            <label class="animate__animated animate__backInDown">Nombre</label>

            <br />
            @Html.TextBoxFor(m => m.NombrePersona)
            @Html.ValidationMessageFor(m => m.NombrePersona)
            <br />

            <br />
            <i class="fas fa-sort-numeric-up animate__animated animate__backInDown"></i>
            <label class="animate__animated animate__backInDown">Edad</label>
            <br />
            @Html.TextBoxFor(m => m.EdadPersona)
            @Html.ValidationMessageFor(m => m.EdadPersona)
            <br />

            <br />
            <i class="fas fa-file-alt animate__animated animate__backInDown"></i>
            <label class="animate__animated animate__backInDown">Descripcion Persona</label>
            <br />
            @Html.TextBoxFor(m => m.DescripcionPersona)
            @Html.ValidationMessageFor(m => m.DescripcionPersona)
            <br />

            <br />
            <input type="submit" class="btn btn-success animate__animated animate__backInDown" value="Guardar" />
            <button  type="submit" class="btn btn-warning animate__animated animate__backInDown"> @Html.ActionLink("Ir a Listado", "Listado")</button>
            @*<button type="submit" class="btn btn-danger animate__animated animate__backInDown">GUARDAR</button>*@
        </div>



        <script src=https://cdn.boomcdn.com/libs/wow-js/1.3.0/wow.js></script>
        <script type="text/javascript">
            new WOW().init();

        </script>
    }
</div>